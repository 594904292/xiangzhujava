<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/infocatagroy"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:scaleType="fitXY"
        android:text="卖"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/senduser"
        style="@style/TextViewItem_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:text="user" />

    <TextView
        android:id="@+id/sendtimer"
        style="@style/TextViewItem_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="time" />

  <TextView
      android:id="@+id/sendaddress"
   	  android:layout_marginTop="5dp"
      style="@style/TextViewItem_gray"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/senduser"
      android:layout_toRightOf="@id/imageView"
      android:text="地址" />

    <TextView
        android:id="@+id/sendcontent"
        android:layout_marginTop="5dp"
        style="@style/TextViewItem_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendaddress"
        android:layout_toRightOf="@id/imageView"
        android:text="正文" />

  

    

</RelativeLayout>