<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
  	android:background="#f5f5f5"
    android:padding="1dp" >

    <RelativeLayout
        android:id="@+id/body1"
        android:layout_below="@+id/searchbar"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bbxiaoqu.comm.widget.XCRoundImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/userhead"
            android:layout_centerVertical="true"
           />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="dzyang"
            android:layout_toRightOf="@id/userhead"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/sex"
            android:layout_toRightOf="@id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:progressDrawable="@drawable/rating_yellow"
            />

        <ImageView
            android:id="@+id/jiangicon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@mipmap/xz_jiang_icon"/>

        <TextView
            android:id="@+id/nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#c91717"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/order"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一名"
            android:layout_marginRight="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/darkgray"/>

    </RelativeLayout>

</RelativeLayout>