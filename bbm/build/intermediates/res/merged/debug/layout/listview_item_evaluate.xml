<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
  	android:background="#fff"
    android:padding="1dp" >




    <com.bbxiaoqu.comm.widget.XCRoundImageView
        android:id="@+id/userhead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/dynamic_info_icon" />

    <TextView
        android:id="@+id/infouser"
        style="@style/TextViewItem_gray"
        android:layout_toRightOf="@+id/userhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:text="用户137"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp" />

    <TextView
      android:id="@+id/addtime"
      style="@style/TextViewItem_gray"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:text="2015-10-30 10:09:22"
      android:textSize="12sp"
        android:paddingBottom="5dp" />



    <RelativeLayout
        android:id="@+id/main_row"
        android:layout_below="@+id/addtime"
        android:layout_toRightOf="@+id/userhead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:background="#f5f5f5">
        <TextView
            android:id="@+id/evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表了一条求助信息"
            android:textColor="@color/account_account_action_normal"
            android:padding="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fg_row"
        android:layout_below="@+id/main_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/spacer_medium"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/fg_row"
    android:id="@+id/row1"
    android:layout_width="fill_parent"
    android:layout_height="28dp"
    android:background="#fff"
    android:padding="1dp" >


        <TextView
        android:id="@+id/tip1"
        style="@style/TextViewItem_gray"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5px"
        android:text="给出的星级评价:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingLeft="10dp"
            android:paddingTop="5dp" />


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:progressDrawable="@drawable/rating_yellow"
            android:stepSize="1"
            android:numStars="5"
            android:rating="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/row1"
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="#fff"
        android:padding="1dp" >


        <TextView
            android:id="@+id/tip2"
            style="@style/TextViewItem_gray"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5px"
            android:text="给出的个性标签"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp" />



        <com.bbxiaoqu.comm.view.XCFlowLayout
            android:id="@+id/evaluatetag"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            >
        </com.bbxiaoqu.comm.view.XCFlowLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/end_row"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/spacer_medium"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp">
    </RelativeLayout>

    </RelativeLayout>