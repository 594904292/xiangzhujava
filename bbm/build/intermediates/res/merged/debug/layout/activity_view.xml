<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 	android:background="@color/view_activity_bg_color"
    android:orientation="horizontal" >
    <include
        android:id="@+id/title_bar"
        layout="@layout/top_menu_second" />
    <RelativeLayout
        android:id="@+id/body1"
        android:layout_below="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:padding="1dp" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="1dp" >
            <RelativeLayout
                android:id="@+id/top_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.bbxiaoqu.comm.widget.XCRoundImageView
                    android:id="@+id/headface"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/xz_xiang_icon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:id="@+id/one"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/headface"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/info_sendname"
                        android:textIsSelectable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textSize="18dp"/>
                    <ImageView
                        android:id="@+id/sex_img"
                        android:layout_toRightOf="@id/info_sendname"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xz_nv_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/headface"
                    android:layout_below="@+id/one"
                    android:layout_marginLeft="5dp">
                        <TextView
                            android:id="@+id/info_sendtime"
                            android:textIsSelectable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="时间"
                            style="@style/TextViewItem_gray"/>
                        <TextView
                            android:id="@+id/info_sendaddress"
                            android:textIsSelectable="true"
                            android:layout_below="@+id/info_sendtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="地点:"
                            android:textColor="#343434"
                            style="@style/TextViewItem_gray" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fg_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_row"
                android:background="@drawable/spacer_medium"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fg_row"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/info_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thumbnail"
                    android:layout_marginTop="5dp"
                    android:text="正文"
                    android:textIsSelectable="true"
                    android:textColor="#343434"
                    android:textColorLink="@color/gray"
                    android:textSize="18sp"
                    style="@style/TextViewItem_body" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/img_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_row"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <!--RelativeLayout
                    android:id="@+id/gallery"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                        <com.bbxiaoqu.comm.view.HorizontalListView
                            android:id="@+id/horizon_listview"
                            android:layout_width="match_parent"
                            android:layout_height="200px"
                            android:layout_alignParentTop="true"
                            >
                        </com.bbxiaoqu.comm.view.HorizontalListView>
                    </RelativeLayout-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/endrow"
                android:layout_below="@id/img_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="0dp"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/info_report_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/gray"
                    android:text="@string/report"
                    android:textSize="18dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/info_evaluate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/xz_zheng_icon"
                    android:text="去评价帮助我的人"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/info_gzbutton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:drawableLeft="@mipmap/xz_f4_icon"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray"
                    android:text="收藏"
                    android:textSize="18dp"
                    android:visibility="gone"
                  />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="1dp" >
            <ImageView
                android:id="@+id/statusimg"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xz_qiuzhu_icon"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/item_bg"
                    android:layout_below="@+id/body1"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:background="#fff5f5f5"
        >
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge = "none"
        android:layout_below="@+id/item_bg">
        <LinearLayout
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/nomess"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomessimage"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/message" />
            </LinearLayout>
            <com.bbxiaoqu.comm.widget.MyListView
                android:id="@+id/pl_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:divider="@drawable/spacer_medium"
                android:dividerHeight="1dp"
    />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/view_rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/white"
        android:visibility="gone">
       <TextView
           android:id="@+id/chat_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:gravity="center_horizontal"
           android:drawableLeft="@mipmap/xz_o1_icon"
           android:text="我来帮"
           android:textColor="@color/gray"
           android:textSize="24dp"
           android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>