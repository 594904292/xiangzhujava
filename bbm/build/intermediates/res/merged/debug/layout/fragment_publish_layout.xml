<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >
 <RelativeLayout 
     android:id="@+id/adv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
         <com.bbxiaoqu.comm.gallery.DetailGallery
        android:id="@+id/myGallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="0dp"
         android:layout_marginBottom="5dp"
        android:soundEffectsEnabled="false"
        android:unselectedAlpha="0.0" />
	<RadioGroup
        android:id="@+id/galleryRaidoGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/myGallery"
        android:gravity="center"
        android:orientation="horizontal" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/adv"
       	android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/publish_btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_green"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:text="求帮忙"
            android:textColor="@color/btn_common_text"
            android:textSize="18sp" />
        <Button
            android:id="@+id/publish_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_green"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:text="我能帮"
            android:textColor="@color/btn_common_text"
            android:textSize="18sp" />
        <Button
            android:id="@+id/publish_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_green"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:text="找宝贝"
            android:textColor="@color/btn_common_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/publish_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_green"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:text="大转让"
            android:textColor="@color/btn_common_text"
            android:textSize="18sp" />
      
    </LinearLayout>

</RelativeLayout>